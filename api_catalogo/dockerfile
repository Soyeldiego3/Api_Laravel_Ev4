# Etapa 1: dependencias (Composer, sin dev)
FROM composer:2 AS vendor
WORKDIR /app
COPY composer.json composer.lock ./
RUN composer install --no-dev --no-progress --prefer-dist --optimize-autoloader

# Etapa 2: runtime PHP-FPM
FROM php:8.3-fpm-alpine

# Extensiones necesarias
RUN apk add --no-cache icu-dev libzip-dev oniguruma-dev postgresql-dev \
    && docker-php-ext-install pdo_pgsql intl zip opcache

WORKDIR /var/www/html

# Copia c√≥digo y vendor
COPY --chown=www-data:www-data . .
COPY --from=vendor --chown=www-data:www-data /app/vendor /var/www/html/vendor

# Permisos para cache y storage
RUN chown -R www-data:www-data storage bootstrap/cache

# Exponer PHP-FPM
EXPOSE 9000
CMD ["php-fpm"]

